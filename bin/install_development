#!/bin/bash

SCRIPTPATH="$( cd "$(dirname "$0")" ; pwd -P )"
if [ ! -d "$HOME/.ssh" ]; then
  echo "Linking .ssh"
  ln -s ~/Dropbox/ssh ~/.ssh
fi
chmod 0600 ~/.ssh/*
chmod 0700 ~/.ssh

if [ ! -d "$HOME/.oh-my-zsh" ]; then
  echo "Install oh-my-zsh"
  sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"
fi
brew install mas

cd ~
if [ ! -d "$HOME/dotfiles" ]; then
  echo "Install dotfiles"
  git clone https://github.com/glenngillen/dotfiles.git ~/dotfiles
  ~/dotfiles/relinkdotfiles
  git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim
  vim +PluginInstall +qall
fi

# Install Pixelmator
mas install 407963104

# Install Screenflow
mas install 917790450

# Install Patterns
mas install 429449079

brew cask install iterm2
$SCRIPTPATH/sync_plist com.googlecode.iterm2.plist

brew install neovim/neovim/neovim
brew cask install google-chrome

brew install tmux
rvm @global do gem install tmuxinator

brew install openssl

brew install ack

brew install awscli
brew install aws-elasticbeanstalk
brew install aws-shell

brew install wget
brew install jq
brew install git
brew install go
brew install node
brew install python
brew install python3
brew install hub
brew install grc
brew install reattach-to-user-namespace
brew install pstree
rvm @global do gem install pygments.rb
brew install ghi

brew cask install postman
brew cask install recordit
open /Applications/RecordIt.app/
brew cask install visual-studio-code

$SCRIPTPATH/link_get_repo

brew install wdiff
brew install colordiff