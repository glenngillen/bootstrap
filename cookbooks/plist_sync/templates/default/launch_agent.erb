<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Label</key>
	<string>com.dropbox.preferences</string>
	<key>OnDemand</key>
	<true/>
	<key>ProgramArguments</key>
	<array>
		<string>/usr/bin/ruby</string>
		<string>/Users/<%=ENV["USER"]%>/bin/copy_plist.rb</string>
	</array>
	<key>RunAtLoad</key>
	<true/>
	<key>WatchPaths</key>
	<array>
	<string>/Users/<%=ENV["USER"]%>/Library/Preferences</string>
	<string>/Users/<%=ENV["USER"]%>/Dropbox/Preferences</string>
	</array>
</dict>
</plist>
